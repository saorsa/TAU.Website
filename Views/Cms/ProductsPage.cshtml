@model TAU.Website.Models.Pages.ProductsPage

<section id="portfolio" class="portfolio">
    <div class="container">
        <div class="row portfolio-container">

            @foreach (var product in Model.Products)
            {
                <div class="col-lg-4 col-md-6 portfolio-item">
                    <div class="portfolio-wrap">
                        <img src=@Url.Content(product.Image.Media.PublicUrl) class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <div class="portfolio-links">
                                <a href=@Url.Content(product.Image.Media.PublicUrl) data-gallery="portfolioGallery" class="portfolio-lightbox" title=@Html.Raw(product.Heading)>
                                    <h4>@Html.Raw(product.Heading)</h4>
                                    <p>@Html.Raw(product.ThumbnailText)</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>