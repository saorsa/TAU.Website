@using TAU.Website
@using Microsoft.Extensions.Options
@model TAU.Website.Models.Custom_Blocks.NewsletterViewModel
@inject IOptions<GoogleReCaptchaConfig> GoogleRecaptchaConfig
@{
    Layout = null;
}
<form id="newsletterForm" novalidate class="needs-validation">
    <div class="form-group row-cols-lg-3">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="newsletterEmail" asp-for="Email" name="Email" placeholder="Email" required pattern="^([a-zA-Z0-9_\-\.]+)@@([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,5})$">
            <div class="invalid-feedback">Not a correct email address.</div>
        </div>
    </div>
    <div>
        <input type="hidden" id="newsLetterReCaptchaToken" asp-for="Token" name="Token"/>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-info" onclick="submitNewsletter()">Subscribe</button>
    </div>
</form>

<div class="modal fade" id="newsletterModal" tabindex="-1" role="dialog" aria-labelledby="newsletterModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newsletterModalLabel">Newsletter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="newsletterReturnStatus">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function submitNewsletter() {
        var form = $("#newsletterForm")[0];
        form.classList.add('was-validated')
        
        if (!form.checkValidity()){
            return;
        }
        
        grecaptcha.ready(function() {
           grecaptcha.execute('@GoogleRecaptchaConfig.Value.SiteKey', {action: 'submit'}).then(function(token) {
               $("#newsLetterReCaptchaToken").val(token);
               var data = $("#newsletterForm").serialize();
               var statusMessage ="";
               $.ajax({
                   type: 'POST',
                   url: '/Newsletter/PostNewsletter',
                   contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                   data: data,
                   success: function (result) {
                       form.classList.remove('was-validated')
                       form.reset();
                       statusMessage = "Email saved.";
                       $('#newsletterReturnStatus').text(statusMessage);
                       $('#newsletterModal').modal('show');
                   },
                   error: function () {
                       form.classList.remove('was-validated');
                       form.reset();
                       statusMessage = "Error while saving email.";
                       $('#newsletterReturnStatus').text(statusMessage);
                       $('#newsletterModal').modal('show');
                   }
               })
           });
        });
    }
</script>