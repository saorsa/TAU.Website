@model TAU.Website.Models.Pages.ContactPage
<section id="contact" class="contact">
    <div class="container pt-md-4">

        <div class="row">
            <div class="col-lg-6">
                <div class="info-box mb-4">
                    <i class="bx bx-map"></i>
                    <h3>Our Address</h3>
                    <p>@Html.Raw(Model.Contacts.Address)</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="info-box  mb-4">
                    <i class="bx bx-envelope"></i>
                    <h3>Email Us</h3>
                    <p>@Html.Raw(Model.Contacts.Email)</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="info-box  mb-4">
                    <i class="bx bx-phone-call"></i>
                    <h3>Call Us</h3>
                    <p>@Html.Raw(Model.Contacts.Phone)</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                @await Html.PartialAsync("ContactForm")
            </div>
        </div>
    </div>
</section>